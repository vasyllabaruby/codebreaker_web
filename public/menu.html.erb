<!DOCTYPE html>
<html lang="en" class="mdl-js">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="assets/favicon.ico" rel="icon">
    <link href="assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/css/styles.css" rel="stylesheet">
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <title><%=I18n.t('page_title')%></title>
  </head>
  <body>
    <section id="introduction">
      <div class="container">
        <div class="row fill-viewport align-items-center justify-content-center">
          <div class="col-12 col-md-6">
            <div class="row">
              <div class="col-md-auto">
                <h1 class="text-white title"><%=I18n.t('title') %></h1>
              </div>
            </div>
            <div class="row">
              <p class="lead text-white-70">
                <%=I18n.t('greetings') %>
              </p>
            </div>
            <hr class="mb-4">
            <form method="post" action="/game">
              <div class="form-group">
                <label for="player_name" class="lead label"><%=I18n.t('p_name') %></label>
                <input class="form-control" name="player_name" id="player_name" pattern="^[\w\u0400-\u04ff]{3,20}$" placeholder="Your name" autofocus="" required="">
              </div>
              <div class="form-group">
                <label for="level" class="lead label"><%=I18n.t('g_level') %></label>
                <select class="custom-select" name="level" required="">
                  <option value=""><%=I18n.t('choose_level.default') %></option>
                  <option value="easy"><%=I18n.t('choose_level.easy') %></option>
                  <option value="medium"><%=I18n.t('choose_level.medium') %></option>
                  <option value="hell"><%=I18n.t('choose_level.hell') %></option>
                </select>
              </div>

              <hr class="mb-4">

              <button type="submit" class="btn btn-primary btn-lg">
                <%=I18n.t('buttons.start') %>
              </button>
              <span class="float-right">
                <a class="btn btn-warning btn-lg" href="/rules" role="button"><%=I18n.t('buttons.rules') %></a>
                <a class="btn btn-success btn-lg" href="/statistics" role="button"><%=I18n.t('buttons.statistics') %></a>
              </span>
            </form>
          </div>
        </div>
       </div>
    </section>
  </body>
</html>